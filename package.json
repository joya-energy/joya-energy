{
  "name": "joya-monorepo",
  "version": "1.0.0",
  "description": "JOYA Application Monorepo",
  "private": true,
  "scripts": {
    "start:backend": "npm run start --workspace joya-backend",
    "dev:backend": "npm run dev --workspace joya-backend",
    "start:frontend": "npm run start --workspace joya-frontend",
    "dev:frontend": "npm run dev --workspace joya-frontend",
    "test:backend": "npm run test --workspace joya-backend",
    "test:backend:w": "npm run test:w --workspace joya-backend",
    "test": "npm run test:backend",
    "build:backend": "npm run build --workspace joya-backend",
    "setup-email": "npm run setup-email --workspace joya-backend"
  },
  "workspaces": [
    "packages/backend",
    "packages/frontend",
    "packages/shared"
  ],
  "dependencies": {
    "@swc/core": "^1.10.6",
    "@swc/helpers": "^0.5.15",
    "pdfkit": "^0.17.2",
    "postmark": "^4.0.5",
    "prettier": "^2.8.8",
    "puppeteer": "^24.32.1",
    "redis": "^4.7.0",
    "typescript": "^5.6.3"
  },
  "overrides": {
    "cross-spawn": "7.0.6"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.2",
    "@types/pdfkit": "^0.17.4",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^5.1.3",
    "release-it": "^17.6.0"
  }
}
