{
  "buildCommand": "cd packages/frontend && node scripts/generate-env.js && node ../../node_modules/@angular/cli/bin/ng.js build --configuration production",
  "outputDirectory": "packages/frontend/dist/joya-frontend/browser",
  "installCommand": "npm install",
  "rewrites": [{ "source": "/((?!.*\\.).*$)", "destination": "/index.html" }],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" }
      ]
    }
  ]
}
