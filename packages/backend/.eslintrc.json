{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard-with-typescript", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error", {}, { "usePrettierrc": true }],
    "no-return-await": "off",
    "@typescript-eslint/return-await": "warn"
  },
  "overrides": [
    {
      "files": ["*.spec.ts"],
      "rules": {
        "jest/valid-expect": 0
      }
    }
  ]
}
